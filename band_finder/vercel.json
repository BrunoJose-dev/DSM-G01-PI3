{
  "version": 2,
  "builds": [
    {
      "src": "front-end",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "back-end",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["back-end/.env"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/back-end/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/front-end/build/$1"
    }
  ]
}
